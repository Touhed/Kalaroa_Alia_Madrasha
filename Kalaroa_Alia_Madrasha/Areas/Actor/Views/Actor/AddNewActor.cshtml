<body style="background-color: darkgray;align-content: center;">

    <div class="container" style="width: 40%;">
        <form asp-area="Actor" asp-controller="Actor" asp-action="AddNewActor" method="post">
            <div class="text-success"><center><h3>@ViewBag.Success</h3></center></div>
            <div asp-validation-summary="All"></div>
            <h2 style="text-align: center;">Add Actor</h2>
            <hr />
            <div class="form-group">
                <label asp-for="UserType"></label>
                <input asp-for="UserType" class="form-control" />
                <span asp-validation-for="UserType"></span>
            </div>

            <input type="submit" class="btn-primary" value="Add" />
        </form>
    </div>
</body>
