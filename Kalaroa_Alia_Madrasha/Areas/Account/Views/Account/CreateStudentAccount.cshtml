<body style="background-color: darkgray;align-content: center; font-family: 'Times New Roman', Times, serif;">
    <div class="container" style="width: 40%;">
        <form asp-area="Account" asp-controller="Account" asp-action="CreateStudentAccount" method="post">
            <div class="text-success"><center><h3>@ViewBag.Success</h3></center></div>
            <div asp-validation-summary="All"></div>
            <h2 style="text-align: center;">Create New Student Account</h2>
            <hr />

            <div class="form-group">
                <label asp-for="StudentName"></label>
                <input asp-for="StudentName" class="form-control" />
