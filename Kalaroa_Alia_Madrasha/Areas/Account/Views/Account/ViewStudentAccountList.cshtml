@model List<Kalaroa_Alia_Madrasha.ViewModel.StudentAccountVM>;
@{
    @*Layout = "_LayoutForAdmin";
    Layout = "_LayoutForAccount";*@
    ViewData["Title"] = "Student Account";
}

<h1 style="text-align: center;">Students Account List</h1>

<div class="container">
    <table border="1" class="table table-bordered" cellpadding="1" cellspacing="1">
        <thead>
            <tr>
                <td style="text-align:center; font-weight: bold;">Student Id</td>
                <td style="text-align:center; font-weight: bold;">Student Name</td>
                <td style="text-align:center; font-weight: bold;">Payment Status</td>
                <td style="text-align:center; font-weight: bold;">Action</td>
            </tr>
        </thead>
        @foreach (var t in Model)
        {
        <tr>
            <td style="text-align:center">@t.StudentId</td>
            <td style="text-align:center">@t.StudentName</td>
            @if (t.PaymentStatus == 0)
            {
                <td style="text-align:center">Paid</td>}
            else
            {
                <td style="text-align:center">Due</td>}
            <td style="text-align:center">
                <a asp-action="StudentAccountDetails" asp-route-id="@t.StudentId" class="btn btn-primary">Details</a>
                <a asp-action="EditStudentAccount" asp-route-id="@t.StudentId" class="btn btn-primary">Edit</a>
                <a asp-action="DeleteStudentAccount" asp-route-id="@t.StudentId" class="btn btn-primary">Delete</a>
            </td>
        </tr>

        }
    </table>
</div>
