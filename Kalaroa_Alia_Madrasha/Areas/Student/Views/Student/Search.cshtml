@model Kalaroa_Alia_Madrasha.Models.Student
@{
    ViewData["Title"] = "Student Details";
}

<h1 style="text-align:center">Student Information Details</h1>

<div class="container">
    <table border="1" class="table table-bordered" cellpadding="1" cellspacing="1">
        <thead>
            <tr>
                <td style="text-align:center; font-weight: bold;">Student Id</td>
                <td style="text-align:center; font-weight: bold;">Student Name</td>
                <td style="text-align:center; font-weight: bold;">Father Name</td>
                <td style="text-align:center; font-weight: bold;">Mother Name</td>
                <td style="text-align:center; font-weight: bold;">Department</td>
                <td style="text-align:center; font-weight: bold;">Class</td>
                <td style="text-align:center; font-weight: bold;">Section</td>
                <td style="text-align:center; font-weight: bold;">Scholarship</td>
                <td style="text-align:center; font-weight: bold;">Session</td>
                <td style="text-align:center; font-weight: bold;">Nationality</td>
                <td style="text-align:center; font-weight: bold;">DOB</td>
                <td style="text-align:center; font-weight: bold;">Gender</td>
                <td style="text-align:center; font-weight: bold;">Present Address</td>
                <td style="text-align:center; font-weight: bold;">Permanent Address</td>
                <td style="text-align:center; font-weight: bold;">Contact</td>
                <td style="text-align:center; font-weight: bold;">Email</td>
            </tr>
        </thead>
        <tr>
            <td style="text-align:center">@Model.StudentId</td>
            <td style="text-align:center">@Model.StudentName</td>
            <td style="text-align:center">@Model.FatherName</td>
            <td style="text-align:center">@Model.MotherName</td>
            <td style="text-align:center">@Model.Department</td>
            <td style="text-align:center">@Model.Class</td>
            <td style="text-align:center">@Model.Section</td>
            <td style="text-align:center">@Model.Scholarship</td>
            <td style="text-align:center">@Model.Session</td>
            <td style="text-align:center">@Model.Nationality</td>
            <td style="text-align:center">@Model.DOB</td>
            <td style="text-align:center">@Model.Gender</td>
            <td style="text-align:center">@Model.PresentAddress</td>
            <td style="text-align:center">@Model.PermanentAddress</td>
            <td style="text-align:center">@Model.Contact</td>
            <td style="text-align:center">@Model.Email</td>
        </tr>
    </table>
</div>