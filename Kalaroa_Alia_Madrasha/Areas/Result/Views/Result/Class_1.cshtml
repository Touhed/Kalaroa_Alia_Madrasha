                </div>
            </div>

            <div class="col-md-9">
                <div class="panel panel-primary" style="height: 500px">
                    <!-- Notice Board Start-->
                    <div class="panel-heading" style="background-color: darkgreen">
                        <i class="fa fa-spinner fa-spin"></i> &nbsp; Result
                    </div>
                    <div class="panel-body" style="background-color: darkgray;align-content: center; font-family: 'Times New Roman', Times, serif;">
                        <div class="container" style="width: 40%;">
                            <form asp-controller="Result" asp-action="Class_1" method="post">
                                <div class="text-success"><center><h3>@ViewBag.Success</h3></center></div>
                                <div asp-validation-summary="All"></div>
                                <h2 style="text-align: center;">Student Result</h2>
                                <hr />

                                <div class="form-group">
                                    <label asp-for="StSession"></label>
                                    <select asp-for="StSession">
                                        <option value="0">--Select--</option>
                                        <option value="1">2015</option>
                                        <option value="2">2016</option>
                                        <option value="3">2017</option>
                                        <option value="4">2016-2017</option>
                                        <option value="5">2017-2018</option>
                                        <option value="6">2018</option>
                                        <option value="7">2018-2019</option>
                                        <option value="8">2017-18</option>
                                    </select>
                                    <span asp-validation-for="StSession"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SDepartment"></label>
                                    <select asp-for="SDepartment">
                                        <option value="">--Select--</option>
                                        <option value="Science"> Science </option>
                                        <option value="Arts"> Arts </option>
                                    </select>
                                    <span asp-validation-for="SDepartment"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SClass"></label>
                                    <select asp-for="SClass">
                                        <option value="">--Select--</option>
                                        <option value="Class_1">Class 1</option>
                                        <option value="Class_2">Class 2</option>
                                        <option value="Class_3">Class 3</option>
                                        <option value="Class_4">Class 4</option>
                                        <option value="Class_5">Class 5</option>
                                        <option value="Class_6">Class 6</option>
                                        <option value="Class_7">Class 7</option>
                                        <option value="Class_8">Class 8</option>
                                        <option value="Class_9">Class 9</option>
                                        <option value="Class_10">Class 10</option>
                                        <option value="Alim_1st_Year">Alim 1st Year</option>
                                        <option value="Alim_2nd_Year">Alim 2nd Year</option>
                                    </select>
                                    <span asp-validation-for="SClass"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ExamType"></label>
                                    <select asp-for="ExamType">
                                        <option value="">--Select--</option>
                                        <option value="">Half Yearly</option>
                                        <option value="">Model Test </option>
                                        <option value="">Year Final </option>
                                    </select>
                                    <span asp-validation-for="ExamType"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="StudentId"></label>
                                    <input asp-for="StudentId" class="form-control" />
                                    <span asp-validation-for="StudentId"></span>
                                </div>

                                <a asp-controller="Result" asp-action="Search" asp-route-id="id">
                                    <input type="submit" class="btn-primary" value="Get Result" /></a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

