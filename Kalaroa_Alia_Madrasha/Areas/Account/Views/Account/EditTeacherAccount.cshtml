@model Kalaroa_Alia_Madrasha.Models.TeacherAccount
@{
    @*Layout = "_LayoutForAccount";*@
    ViewData["Title"] = "Update Teacher Account";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Kalaroa_Alia_Madrasha</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    *@
</head>
<body style="background-color: darkgray;align-content: center;font-family: 'Times New Roman', Times, serif;">
    <div class="container" style="width: 40%;">
        <form asp-area="Account" asp-controller="Account" asp-action="EditTeacherAccount" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h2 style="text-align: center;">Update Teacher Account</h2>
            <hr />
            <div class="form-group">
                <label asp-for="AccNo" class="control-label"></label>
                <input asp-for="AccNo" class="form-control" readonly />
                <span asp-validation-for="AccNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherId"></label>
                <input asp-for="TeacherId" class="form-control" />
                <span asp-validation-for="TeacherId"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherName" class="control-label"></label>
                <input asp-for="TeacherName" class="form-control" />
                <span asp-validation-for="TeacherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasicSalary" class="control-label"></label>
                <input asp-for="BasicSalary" class="form-control" />
                <span asp-validation-for="BasicSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Month" class="control-label"></label>
                <input asp-for="Month" class="form-control">
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control">
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <input type="submit" class="btn-primary" value="Update" />
        </form>
    </div>
</body>
</html>