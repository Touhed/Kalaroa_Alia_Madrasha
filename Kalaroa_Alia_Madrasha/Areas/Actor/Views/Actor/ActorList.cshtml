@model List<Kalaroa_Alia_Madrasha.Models.Actor>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Actor List";
}

<h1 style="text-align:center">Actor List</h1>

<div class="container" style="width: 20%; text-align: left;">
    <div class="form-group">
        <div class="input-group-addon">
            <form asp-area="Actor" asp-controller="Actor" asp-action="Search" >
                <input  placeholder="Search By Id" class="form-control"  name="id"/>
                <a asp-area="Actor" asp-controller="Actor" asp-action="Search" asp-route-id="id"><input type="submit" value="Search" /></a>
            </form>
        </div>
    </div>
</div>
<div class="container">
    <table border="1" class="table table-bordered" cellpadding="1" cellspacing="1">
        <thead>
            <tr>
                <td style="text-align:center; font-weight: bold;">User Id</td>
                <td style="text-align:center; font-weight: bold;">User Type</td>
            </tr>
        </thead>
        @foreach (var a in Model)
        {
            <tr>
                <td style="text-align:center">@a.UserId</td>
                <td style="text-align:center">@a.UserType</td>
            </tr>
        }
    </table>
</div>