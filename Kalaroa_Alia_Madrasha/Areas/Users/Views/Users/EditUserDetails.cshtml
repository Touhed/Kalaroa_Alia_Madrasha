@{
    ViewBag.Title = "Edit User Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Kalaroa_Alia_Madrasha</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
